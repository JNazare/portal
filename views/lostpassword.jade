doctype html 5
html(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='')
		meta(name='author', content='')
		title Login
		link(href='/css/bootstrap.min.css', rel='stylesheet')
		link(href='/css/signin.css', rel='stylesheet')
	body
	.container
		form.form-signin(role='form', action='/lostpassword', method='post')
			h2.form-signin-heading Enter your email
			input.form-control(type='email', name='username', placeholder='Email address', required='required', autofocus='autofocus')
			br
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Submit
			br
			div
				if (message)
					.alert.alert-info
						| #{message}